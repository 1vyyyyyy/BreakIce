<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Hello World!"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#dde1e9"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_search" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
        </androidx.viewpager.widget.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/point1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/checked"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/point2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/unchecked"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/point3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/unchecked"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/point4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/unchecked"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:text="面试模拟"
            android:textColor="#333333"
            android:background="@drawable/mianshi"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="简历面试"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#333333"
            android:background="@drawable/jianli"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MBTI"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mbti"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/fenlei"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="标签分类"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/biaoqian"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#909090"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="推荐标签"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/more"

            android:text="更多 >"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pubu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="horizontal">-->

        </androidx.recyclerview.widget.RecyclerView>
<!--    </LinearLayout>-->
    </LinearLayout>
</ScrollView>